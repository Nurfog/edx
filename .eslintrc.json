{
  "extends": "@edx/eslint-config",
  "globals": {  // Try to avoid adding any new globals.
    // Old compatibility things and hacks
    "edx": true,
    "XBlock": true,

    // added by Django i18n tools
    "gettext": true,
    "ngettext": true,

    // added by jasmine-jquery
    "loadFixtures": true,
    "appendLoadFixtures": true,
    "readFixtures": true,
    "setFixtures": true,
    "appendSetFixtures": true,
    "spyOnEvent": true,

    // used by our requirejs implementation
    "RequireJS": true,

    // enable jquery
    "$": true
  },
  "rules": {
    "func-names": "off",
    "indent": ["error", 4],
    "new-cap": "off",
    "no-else-return": "off",
    "no-shadow": "error",
    "object-curly-spacing": ["error", "never"],
    "one-var": "off",
    "one-var-declaration-per-line": ["error", "initializations"],
    "space-before-function-paren": ["error", "never"]
  }
}
